<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletUsuarios</servlet-name>
        <servlet-class>Controlador.ServletUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEstudiantes</servlet-name>
        <servlet-class>Controlador.ServletEstudiantes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProfesores</servlet-name>
        <servlet-class>Controlador.ServletProfesores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletNotas</servlet-name>
        <servlet-class>Controlador.ServletNotas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCursos</servlet-name>
        <servlet-class>Controlador.ServletCursos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletEstudiantes</servlet-name>
        <url-pattern>/ServletEstudiantes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProfesores</servlet-name>
        <url-pattern>/ServletProfesores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUsuarios</servlet-name>
        <url-pattern>/ServletUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletNotas</servlet-name>
        <url-pattern>/ServletNotas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCursos</servlet-name>
        <url-pattern>/ServletCursos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
